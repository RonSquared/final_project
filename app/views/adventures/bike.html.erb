<h1> Bike Adventures </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Distance</th>
      <th>Date</th>
      <th>Elevation Gain</th>
      <th>Moving Time</th>
      <th>Total Adventure Time</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="5"></th>
    </tr>
  </thead>
<tbody>

	<% @bike_adventures.each do |aspects| %>
	  <tr>
	  	<td><%= aspects["name"] %></td>
	  	<td><%= aspects["distance"]/1000 %>km</td>
	  	<td><%= aspects["start_date"] %></td>
      <td><%= aspects["total_elevation_gain"] %>m</td>
		  <td><%= aspects["moving_time"]/3600 %>hr</td>
      <td><%= aspects["elapsed_time"]/3600 %>hr</td>
      <td><%= aspects["location_city"] %></td>
      <td><%= aspects["location_state"] %></td>
      <td><%= aspects["location_country"] %></td>
	  </tr>
	<% end %>


</tbody>
</table>

