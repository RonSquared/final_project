<h1>Listing adventures</h1>


<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Title</th>
      <th>Date</th>
      <th>Total Adventure Time</th>
      <th>Total Active Time</th>
      <th>Distance</th>
      <th>Elevation Gain</th>
      <th>City</th>
      <th>State</th>
      <th>County</th>
      <th>Adventure Thoughts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adventures.each do |adventure| %>
      <tr>
        <td><%= adventure.activity %></td>
        <td><%= adventure.title %></td>
        <td><%= adventure.date %></td>
        <td><%= adventure.duration %>seconds</td>
        <td><%= adventure.moving_time %>seconds</td>
        <td><%= adventure.distance %>m</td>
        <td><%= adventure.total_elevation_gain %>m</td>
        <td><%= adventure.location_city %></td>
        <td><%= adventure.location_state %></td>
        <td><%= adventure.location_country %></td>
        <td><%= adventure.misc_notes %></td>
        <td><%= link_to 'Show', adventure %></td>
        <td><%= link_to 'Edit', edit_adventure_path(adventure) %></td>
        <td><%= link_to 'Destroy', adventure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

