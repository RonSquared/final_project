<h1>Listing adventures</h1>

<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Date</th>
      <th>Duration</th>
      <th>Maps</th>
      <th>Misc notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adventures.each do |adventure| %>
      <tr>
        <td><%= adventure.activity %></td>
        <td><%= adventure.date %></td>
        <td><%= adventure.duration %></td>
        <td><%= adventure.maps %></td>
        <td><%= adventure.misc_notes %></td>
        <td><%= link_to 'Show', adventure %></td>
        <td><%= link_to 'Edit', edit_adventure_path(adventure) %></td>
        <td><%= link_to 'Destroy', adventure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Adventure', new_adventure_path %>
